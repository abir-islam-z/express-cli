{
  "name": "express-modular-cli",
  "version": "2.0.0",
  "description": "An ultra-lightweight CLI tool with only 1 dependency to generate modular Express.js projects",
  "main": "dist/index.js",
  "bin": {
    "exm-cli": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "if exist dist rmdir /s /q dist",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "npm run build && node dist/index.js --help",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run prepare"
  },
  "dependencies": {
    "commander": "^9.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.7.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "express",
    "cli",
    "generator",
    "typescript",
    "modular",
    "scaffolding"
  ],
  "author": "https://github.com/abir-islam-z",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abir-islam-z/express-cli"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
