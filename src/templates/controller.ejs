  const result = await <%= m_name %>Service.findAll();

  sendResponse(res, {
    statusCode: 200,
    success: true,
    message: '<%= m_name %> retrieved successfully',
    data: result,
  });
});

const findOne = catchAsync(async (req, res) => {
  const result = await <%= m_name %>Service.findOne(req.params.id);

  sendResponse(res, {
    statusCode: 200,
    success: true,
    message: '<%= m_name %> retrieved successfully',
    data: result,
  });
